<h1>My tasks</h1>
<ul>
<% @tasks.each do |task|  %>
  <%  if task.completed %>
  <li><input type="checkbox" checked>  <%= link_to task.title, task_path(task) %></li>
  <% else %>
  <li><input type="checkbox">  <%=link_to task.title, task_path(task) %></li>
  <%end %>
  <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<% end %>
</ul>

<%=  link_to "Add a new task", new_task_path%>
